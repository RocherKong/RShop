<!--需要设置 SqlNameSpace 一般设置为TableName -->
<sqlMap namespace="T_InviteMember" xmlns="http://ibatis.apache.org/mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
  <alias>
    <!--设置查询映射表实体-->
    <typeAlias alias="T_InviteMember" type="RShop.TradingCenter.Entity.T_InviteMember,RShop.TradingCenter.Entity" />
  </alias>
  <!--缓存策略-->
  <cacheModels>
    <cacheModel id="T_InviteMember_EntityCache" implementation="MEMORY">
      <flushInterval hours="24"/>
      <flushOnExecute statement="T_InviteMember.Insert"/>
      <flushOnExecute statement="T_InviteMember.Delete"/>
      <flushOnExecute statement="T_InviteMember.Update"/>
    </cacheModel>
  </cacheModels>
  <statements>
    <!--公共查询参数片段-->
    <sql id="QueryParams">
      Where T.IsDelete=0 
    </sql>

    <!--新增-->
    <insert id="Insert" parameterClass="T_InviteMember">
      INSERT INTO T_InviteMember
      (EnterpriseId
      ,InviteEMail
      ,Status
      ,IsDelete
      ,CreateTime
      ,Creator)
      VALUES
      (#EnterpriseId#
      ,#InviteEMail#
      ,#Status#
      ,#IsDelete#
      ,GetDate()
      ,#Creator#)
      <selectKey property="Id" type="post" resultClass="long">
        Select @@IDENTITY
      </selectKey>
    </insert>
    
    <!--逻辑删除-->
    <update id="Delete" parameterClass="Hashtable">
      UPDATE T_InviteMember
      SET IsDelete=1 Where Id=#Id#
    </update>
    
    <!--逻辑删除-->
    <update id="DeleteList" parameterClass="Hashtable">
      UPDATE T_InviteMember
      SET IsDelete=1 Where Id
      <iterate prepend="In" property="Ids" open="(" close=")" conjunction=",">#Ids[]#</iterate>
    </update>
    
    <!--更新-->
    <update id="Update" parameterClass="T_InviteMember">
      UPDATE T_InviteMember
      SET 
      EnterpriseId = #EnterpriseId#
      ,InviteEMail = #InviteEMail#
      ,Status = #Status#
      ,IsDelete = #IsDelete#
      ,CreateTime = #CreateTime#
      ,Creator = #Creator#
      WHERE Id=#Id#
    </update>
    
    <!--获取数据列-->
    <select id="GetList" parameterClass="Hashtable" resultClass="T_InviteMember">
      SELECT T.* From T_InviteMember T
      <include refid="QueryParams"/>
      Order By T.Id DESC
    </select>

	<!--获取分页数据-->
    <select id="GetListByPage" parameterClass="Hashtable" resultClass="T_InviteMember">
      Select * From (Select ROW_NUMBER() Over(Order By T.Id DESC) Row_Index,T.*
      From T_InviteMember T
      <include refid="QueryParams"/>
      ) TT
      Where TT.Row_Index Between ((#PageIndex#-1)*#PageSize#+1) And (#PageIndex#*#PageSize#)
    </select>
       
    <!--获取记录数-->
    <select id="GetRecord" parameterClass="Hashtable" resultClass="int">
      Select Count(1) From T_InviteMember T
      <include refid="QueryParams"/>
    </select>
    
    <!--获取表映射实体-->
    <select id="GetEntity" parameterClass="Hashtable" resultClass="T_InviteMember">
      Select Top 1 T.* From T_InviteMember T
      Where T.IsDelete=0 
      <isNotEmpty prepend="And" property="Id">
        T.Id=#Id#
      </isNotEmpty>
    </select>
    
    <!--是否存在该记录-->
    <select id="IsExist"  parameterClass="Hashtable" resultClass="int">
      Select Count(1) From T_InviteMember T
      <include refid="QueryParams"/>
    </select>
    
	<!--获取前N行数据-->
    <select id="GetTop" parameterClass="Hashtable" resultClass="T_InviteMember">
      Select Top (#Num#) * From T_InviteMember T
      <include refid="QueryParams"/>
    </select>
  </statements>
</sqlMap>