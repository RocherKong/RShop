<!--需要设置 SqlNameSpace 一般设置为TableName -->
<sqlMap namespace="T_ConsultingHistory" xmlns="http://ibatis.apache.org/mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
  <alias>
    <!--设置查询映射表实体-->
    <typeAlias alias="T_ConsultingHistory" type="MaiDao.TradingCenter.Entity.T_ConsultingHistory,MaiDao.TradingCenter.Entity" />
    <typeAlias alias="V_ConsultingHistory" type="MaiDao.TradingCenter.Entity.Views.V_ConsultingHistory,MaiDao.TradingCenter.Entity" />
    
  </alias>
  <!--缓存策略-->
  <cacheModels>
    <cacheModel id="T_ConsultingHistory_EntityCache" implementation="MEMORY">
      <flushInterval hours="24"/>
      <flushOnExecute statement="T_ConsultingHistory.Insert"/>
      <flushOnExecute statement="T_ConsultingHistory.Delete"/>
      <flushOnExecute statement="T_ConsultingHistory.Update"/>
    </cacheModel>
  </cacheModels>
  <statements>
    <!--公共查询参数片段-->
    <sql id="QueryParams">
      Where T.IsDelete=0
      <isNotEmpty prepend="And" property="MemberId">
        T.MemberId=#MemberId#
      </isNotEmpty>
    </sql>

    <!--新增-->
    <insert id="Insert" parameterClass="T_ConsultingHistory">
      INSERT INTO T_ConsultingHistory     
      (MemberId        
      ,AdministratorId        
      ,Type        
      ,Content        
      ,Answer        
      ,AnswerTime        
      ,SortId        
      ,Status        
      ,IsDelete        
      ,CreateTime        
      ,Creator)
      VALUES
      (#MemberId#        
      ,#AdministratorId#        
      ,#Type#        
      ,#Content#        
      ,#Answer#        
      ,#AnswerTime#        
      ,#SortId#        
      ,#Status#        
      ,#IsDelete#        
      ,#CreateTime#        
      ,#Creator#)    
      <selectKey property="Id" type="post" resultClass="long">
        Select @@IDENTITY
      </selectKey>
    </insert>
    
    <!--逻辑删除-->
    <update id="Delete" parameterClass="Hashtable">
      UPDATE T_ConsultingHistory
      SET IsDelete=1 Where Id=#Id#
    </update>
    
    <!--逻辑删除-->
    <update id="DeleteList" parameterClass="Hashtable">
      UPDATE T_ConsultingHistory
      SET IsDelete=1 Where Id
      <iterate prepend="In" property="Ids" open="(" close=")" conjunction=",">#Ids[]#</iterate>
    </update>
    
    <!--更新-->
    <update id="Update" parameterClass="T_ConsultingHistory">
      UPDATE T_ConsultingHistory
      SET 
      MemberId = #MemberId#
      ,AdministratorId = #AdministratorId#
      ,Type = #Type#
      ,Content = #Content#
      ,Answer = #Answer#
      ,AnswerTime = #AnswerTime#
      ,SortId = #SortId#
      ,Status = #Status#
      ,IsDelete = #IsDelete#
      ,CreateTime = #CreateTime#
      ,Creator = #Creator#
      WHERE Id=#Id#
    </update>
    
    <!--获取数据列-->
    <select id="GetList" parameterClass="Hashtable" resultClass="T_ConsultingHistory">
      SELECT T.* From T_ConsultingHistory T
      WHERE T.MemberId=#MemberId# AND T.IsDelete=0
      AND T.AdministratorId=(Select TOP 1 AdministratorId From T_ExclusiveConsultant AS TEMP
      Where TEMP.IsDelete=0 and TEMP.MemberId=#MemberId# Order BY TEMP.CreateTime DESC)
    </select>

	<!--获取分页数据-->
    <select id="GetListByPage" parameterClass="Hashtable" resultClass="T_ConsultingHistory">
      Select * From (Select ROW_NUMBER() Over(Order By T.Id DESC) Row_Index,T.*
      From T_ConsultingHistory T
      <include refid="QueryParams"/>
      ) TT
      Where TT.Row_Index Between ((#PageIndex#-1)*#PageSize#+1) And (#PageIndex#*#PageSize#)
    </select>

    <!--获取分页数据-->
    <select id="GetConsultingListByPage" parameterClass="Hashtable" resultClass="V_ConsultingHistory">
      Select TT.*,TM.LoginName as MemberName From (Select ROW_NUMBER() Over(Order By T.Id DESC) Row_Index,T.*
      From T_ConsultingHistory T
      <include refid="QueryParams"/>
      ) TT      
      LEFT JOIN T_Member AS TM ON TM.Id=TT.MemberId
      Where TT.Row_Index Between ((#PageIndex#-1)*#PageSize#+1) And (#PageIndex#*#PageSize#)
      <isNotEmpty prepend="AND" property="MemberName">
        TM.LoginName like '%'+#MemberName#+'%'
      </isNotEmpty>
    </select>

    

    <!--获取记录数-->
    <select id="GetRecord" parameterClass="Hashtable" resultClass="int">
      Select Count(1) From T_ConsultingHistory T
      <include refid="QueryParams"/>
    </select>
    
    <!--获取表映射实体-->
    <select id="GetEntity" parameterClass="Hashtable" resultClass="T_ConsultingHistory">
      Select Top 1 T.* From T_ConsultingHistory T
      Where T.IsDelete=0 
      <isNotEmpty prepend="And" property="Id">
        T.Id=#Id#
      </isNotEmpty>
    </select>
    
    <!--是否存在该记录-->
    <select id="IsExist"  parameterClass="Hashtable" resultClass="int">
      Select Count(1) From T_ConsultingHistory T
      <include refid="QueryParams"/>
    </select>
    
	<!--获取前N行数据-->
    <select id="GetTop" parameterClass="Hashtable" resultClass="T_ConsultingHistory">
      Select Top (#Num#) * From T_ConsultingHistory T
      <include refid="QueryParams"/>
    </select>
  </statements>
</sqlMap>