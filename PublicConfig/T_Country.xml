<!--需要设置 SqlNameSpace 一般设置为TableName -->
<sqlMap namespace="T_Country" xmlns="http://ibatis.apache.org/mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
  <alias>
    <!--设置查询映射表实体-->
    <typeAlias alias="T_Country" type="RShop.TradingCenter.Entity.T_Country,RShop.TradingCenter.Entity" />
  </alias>
  <!--缓存策略-->
  <cacheModels>
    <cacheModel id="T_Country_EntityCache" implementation="MEMORY">
      <flushInterval hours="24"/>
      <flushOnExecute statement="T_Country.Insert"/>
      <flushOnExecute statement="T_Country.Delete"/>
      <flushOnExecute statement="T_Country.Update"/>
    </cacheModel>
  </cacheModels>
  <statements>
    <!--公共查询参数片段-->
    <sql id="QueryParams">
      Where T.IsDelete=0 
    </sql>

    <!--新增-->
    <insert id="Insert" parameterClass="T_Country">
      INSERT INTO T_Country     
      (CountryName        
      ,CountryCode)
      VALUES
      (#CountryName#        
      ,#CountryCode#)    
      <selectKey property="Id" type="post" resultClass="int">
        Select @@IDENTITY
      </selectKey>
    </insert>
    
    <!--逻辑删除-->
    <update id="Delete" parameterClass="Hashtable">
      UPDATE T_Country
      SET IsDelete=1 Where Id=#Id#
    </update>
    
    <!--逻辑删除-->
    <update id="DeleteList" parameterClass="Hashtable">
      UPDATE T_Country
      SET IsDelete=1 Where Id
      <iterate prepend="In" property="Ids" open="(" close=")" conjunction=",">#Ids[]#</iterate>
    </update>
    
    <!--更新-->
    <update id="Update" parameterClass="T_Country">
      UPDATE T_Country
      SET 
      CountryName = #CountryName#
      ,CountryCode = #CountryCode#
      WHERE Id=#Id#
    </update>
    
    <!--获取数据列-->
    <select id="GetList" parameterClass="Hashtable" resultClass="T_Country">
      SELECT T.* From T_Country T
      <include refid="QueryParams"/>
      Order By T.Id DESC
    </select>

	<!--获取分页数据-->
    <select id="GetListByPage" parameterClass="Hashtable" resultClass="T_Country">
      Select * From (Select ROW_NUMBER() Over(Order By T.Id DESC) Row_Index,T.*
      From T_Country T
      <include refid="QueryParams"/>
      ) TT
      Where TT.Row_Index Between ((#PageIndex#-1)*#PageSize#+1) And (#PageIndex#*#PageSize#)
    </select>
       
    <!--获取记录数-->
    <select id="GetRecord" parameterClass="Hashtable" resultClass="int">
      Select Count(1) From T_Country T
      <include refid="QueryParams"/>
    </select>
    
    <!--获取表映射实体-->
    <select id="GetEntity" parameterClass="Hashtable" resultClass="T_Country">
      Select Top 1 T.* From T_Country T
      Where T.IsDelete=0 
      <isNotEmpty prepend="And" property="Id">
        T.Id=#Id#
      </isNotEmpty>
    </select>
    
    <!--是否存在该记录-->
    <select id="IsExist"  parameterClass="Hashtable" resultClass="int">
      Select Count(1) From T_Country T
      <include refid="QueryParams"/>
    </select>
    
	<!--获取前N行数据-->
    <select id="GetTop" parameterClass="Hashtable" resultClass="T_Country">
      Select Top (#Num#) * From T_Country T
      <include refid="QueryParams"/>
    </select>
  </statements>
</sqlMap>